extend type Query {
    book(id: ID): Book
    allBooks: [Book]
}

extend type Mutation {
    addBook(bookInput: BookInput!): Book
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

input BookInput {
    name: String
    pageCount: Int
    author: AuthorInput
}

input AuthorInput {
    firstName: String
    lastName: String
}
